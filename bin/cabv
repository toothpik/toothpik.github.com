#!/bin/bash
#  check and backup ~/.vimrc
files=(~/.vim/backups/.vimrc_*)
lb=${files[0]}
for f in "${files[@]}"; do
    if [[ $f -nt $lb ]]; then
        lb=$f
    fi
done
diff -q ~/.vimrc $lb
if !(( $? ))
then
    echo "no difference between ~/.vimrc and $lb"
    exit 0
fi
diff ~/.vimrc $lb
echo 'creating backup:'
cp -fv ~/.vimrc ~/.vim/backups/.vimrc_$(date '+%Y%m%d')
echo 'uploading to web site'
ruvimrc
